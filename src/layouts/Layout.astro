---
import { root } from "postcss";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Legend from "../components/colors/Legend.astro";
import {
  getActivityRating,
  getColor,
  getSleepRating,
  type ColorRating,
} from "../components/colors/getColor";

interface Props {
  title: string;
}

const title = `benceâ€™s ${Astro.props.title}`;

const sleepRaw = import.meta.env.OURA_SLEEP_SCORE ?? "0";
const activityRaw = import.meta.env.OURA_ACTIVITY_CAL ?? "0";
const isMissingData = sleepRaw === "missing" || activityRaw === "missing";

const colorRating: ColorRating = isMissingData
  ? "missing"
  : `${getSleepRating(parseInt(sleepRaw))}-${getActivityRating(parseInt(activityRaw))}`;
const backgroundColor = getColor(colorRating);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Default Astro description. If the site's owner has not changed this that's really embarrassing for them." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Legend activeColorRating={colorRating} isMissingData={isMissingData} />
    <Footer />
  </body>

  <style is:global define:vars={{ backgroundColor }}>
    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
    }
    html {
      font-family: system-ui, sans-serif;
      background: var(--backgroundColor);
    }
    body {
      margin: auto;
      padding: 1rem;
      width: 800px;
      max-width: calc(100% - 2rem);
      color: #222;
      font-size: 20px;
      line-height: 1.6;
    }
    a {
      color: rgb(var(--accent-dark));
    }

    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
  </style>
</html>
